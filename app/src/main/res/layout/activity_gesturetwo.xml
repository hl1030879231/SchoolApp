<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gestureback"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center">
        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:src="@drawable/logo"
            android:id="@+id/roundedImageView_three" />
    </LinearLayout>

    <TextView
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="家长帮"
        android:textColor="@color/apptext"
        android:textSize="20sp" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textSize="18sp"
        android:text="请再次输入手势密码"/>
    <com.example.schoolapp.Activity.login.GestureLockViewGroup
        android:id="@+id/id_gestureLockViewGroupthree"
        android:layout_marginTop="25dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="#F2F2F7"
        android:gravity="center_vertical"
        test:background_gesture="@color/white"
        test:count="3"
        test:tryTimes="5"/>
    <!--   zhy:color_no_finger_inner_circle="#ff085D58"
            zhy:color_no_finger_outer_circle="#ff08F0E0"
            zhy:color_finger_on="#FF1734BF" -->
</LinearLayout>