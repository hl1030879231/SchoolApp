<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="10dp">
        <Spinner
            android:id="@+id/spinner_data"
            android:layout_width="125dp"
            android:layout_height="30dp"></Spinner>
        <TextView
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:text="年"
            android:gravity="center|left"
            android:textSize="14sp" />

        <TextView
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:text="第"
            android:gravity="center|right"
            android:textSize="14sp"
            android:id="@+id/textView6" />

        <Spinner
            android:id="@+id/spinner_term"
            android:layout_width="60dp"
            android:layout_height="30dp"></Spinner>
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="学期"
            android:gravity="center|left"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/search"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="查询"
            android:gravity="center|left"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background_grade_title"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="课程名称"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/textView7" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:text="成绩"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:gravity="center"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="任课教师"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="学分"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"/>
        <TextView
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:text="绩点"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listview_grades"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_list_grades"></ListView>
</LinearLayout>