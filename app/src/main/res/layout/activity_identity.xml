<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
<TextView
    android:layout_width="170dp"
    android:layout_height="40dp"
    android:layout_marginTop="20dp"
    android:text="身 份 验 证"
    android:textSize="28sp"
    android:gravity="center"
    android:layout_gravity="center_horizontal"
    android:textColor="@color/me_blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/identity1"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="您的姓名"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/par_name"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:inputType="textAutoComplete"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="13sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/identity2"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="您孩子的姓名"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/child_name"
            android:layout_width="90dp"
            android:textSize="13sp"
            android:inputType="textAutoComplete"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/identity3"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="您孩子的学号"
            android:gravity="center|left"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/id_stu"
            android:layout_width="120dp"
            android:textSize="13sp"
            android:inputType="number"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/identity4"/>
        <TextView
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:text="您孩子的的录取通知书号"
            android:gravity="center|left"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/id_in"
            android:layout_width="120dp"
            android:inputType="number"
            android:layout_height="match_parent"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="13sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/identity5"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="您孩子的身份证号"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/id"
            android:layout_width="170dp"
            android:textSize="13sp"
            android:inputType="number"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/identity6" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="您孩子所在的学校"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner_pro"
            android:layout_width="95dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"></Spinner>

        <Spinner
            android:id="@+id/spinner_city"
            android:layout_width="120dp"
            android:layout_height="35dp"></Spinner>

    </LinearLayout>

    <Spinner
        android:id="@+id/spinner_school"
        android:layout_width="120dp"
        android:layout_marginLeft="18dp"
        android:layout_height="35dp"></Spinner>

    <Button
        android:id="@+id/commit_id"
        android:layout_width="120dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/r_corner_button3"
        android:text="提   交"
        android:textSize="20sp" />

</LinearLayout>